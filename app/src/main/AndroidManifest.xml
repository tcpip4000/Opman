<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.ertechnology.opman" >

    <uses-sdk android:minSdkVersion="11"  android:targetSdkVersion="20" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="net.ertechnology.opman.MyActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.ertechnology.opman.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="net.ertechnology.opman.MyActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.ertechnology.opman.MyActivity" />
        </activity>
    </application>

</manifest>
